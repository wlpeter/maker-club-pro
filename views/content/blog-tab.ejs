<%  if (bolgList && Object.prototype.toString.call(bolgList) == "[object Array]" && bolgList.length > 0) {
    for (var i=0; i < bolgList.length; i++) {%>
    <article class="templatemo-blog-post">
        <div class="post-img-container">
            <img src="" alt="Post 1" class="post-img img-responsive" style="width: 700px;height: 353px;">
            <div class="templatemo-post-social">
                <div class="flex-center margin-top-10">
                    <i class="fa fa-heart fa-2x red-bg"></i>
                </div>
                <div class="flex-center margin-top-10">
                    <i class="fa fa-comments-o fa-2x gold-bg"></i>
                </div>
            </div>
            <div class="templatemo-post-date gold-text">
                <div>
                    <div class="text-center date"><%= bolgList[i].day %></div>
                    <div class="text-center"><%= bolgList[i].month %>æœˆ</div>
                </div>
            </div>
        </div>
        <div class="post-title">
            <h3 class="text-uppercase"><%= bolgList[i].title %></h3>
        </div>
        <div class="post-meta-data">
            <p class="gold-text">Posted by <%= bolgList[i].author %> / <%= bolgList[i].tag %> / Views: <%= bolgList[i].viewNum %></p>
        </div>
        <div class="post-excerpt gray-text">
            <p><%= bolgList[i].abstract %></p>
        </div>
        <a href="/blog/123456" class="gray-text margin-top-10 post-read-more">
            <i class="fa fa-arrow-circle-o-right fa-2x v-align-middle"></i> Read More
        </a>
        <hr>
    </article>
<% } } %>
